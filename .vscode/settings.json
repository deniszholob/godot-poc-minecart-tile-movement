{
    "angular-files-generator.customTemplateFolder": ".vscode/ngfg-templates",
    "angular-files-generator.useOnlyCustomTemplates": true,
    "godotTools.editorPath.godot4": "/var/lib/flatpak/exports/bin/org.godotengine.Godot",
    "editor.bracketPairColorization.enabled": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [80, 100],
    "explorer.sortOrderLexicographicOptions": "lower", // Case sensitive file ordering in tree
    // Editor Icon Theme
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.folders.associations": {
      "workflows": "github",
      "models": "mjml"
    },
    "material-icon-theme.folders.customClones": [
        {
            "name": "components",
            "folderNames": ["components"],
            "base": "components",
            "color": "blue-900"
        },
        {
            "name": "scenes",
            "folderNames": ["scenes"],
            "base": "components",
            "color": "green-600"
        },
        {
            "name": "levels",
            "folderNames": ["levels"],
            "base": "components",
            "color": "green-600"
        },
    ],
    "material-icon-theme.files.customClones": [
        {
            "name": "gd-scene",
            "fileExtensions": ["tscn"],
            "base": "godot",
            "color": "purple-400"
        },
        {
            "name": "gd-component",
            "fileExtensions": ["component.gd"],
            "base": "godot",
            "color": "red-400"
        },
        {
            "name": "gd-model",
            "fileExtensions": ["model.gd"],
            "base": "godot",
            "color": "red-400"
        },
        {
            "name": "gd-enum",
            "fileExtensions": ["enum.gd"],
            "base": "godot",
            "color": "teal-400"
        },
        {
            "name": "gd-util",
            "fileExtensions": ["util.gd"],
            "base": "godot",
            "color": "light-green-500"
        },
        {
            "name": "gd-data",
            "fileExtensions": ["data.tres", "tres"],
            "base": "godot",
            "color": "yellow-400"
        }
    ],
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.exclude": {
        "**/*.dev": true,
        "**/*.godot": true,
        "**/*.exports": true,
        "**/*.import": true,
        "**/*.screenshots": true,
        "**/dist/": true,
        "**/.editorconfig": true,
        "**/.gitattributes": true,
        "**/.gitignore": true,
        "**/.gitkeep": true,
        "**/.gitlab-ci.yml": true
    },
    "cSpell.words": [
        "minecart"
    ]
}
